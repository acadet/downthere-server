.list
  .upload-wrapper
    =  link_to 'Upload a new picture', new_picture_path

  %ul.pictures
    - @pictures.each do |p|
      %li
        = image_tag(p.attachment)
        .details
          %p.filename= p.name
          %p= "#{time_ago_in_words(p.updated_at)} ago"
          = button_to 'Delete', p, method: :delete, class: 'delete-button'
